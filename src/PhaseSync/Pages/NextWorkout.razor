@page "/nextworkout"
@attribute [Authorize]
@if (TAOConnected)
{
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Upcoming workout</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudText>@Workout.ToString()</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="@SendToPolar">Push to Polar Flow</MudButton>
        </MudCardActions>
    </MudCard>
    
} else
{
    <MudAlert Severity="Severity.Error">
        It looks like you have not yet granted PhaseSync access to your TrainAsONE Workouts.
        Please fix this in the <MudLink Href="/settings" Typo="Typo.body2" Color="Color.Inherit"><b>settings</b></MudLink>.
    </MudAlert>
}
